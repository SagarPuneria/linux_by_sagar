#include<stdio.h>
#include<stdlib.h>
int main()
{
	FILE *sfp,*dfp;
	int ch;
	if((sfp=fopen("myfile","r"))==NULL)
	{
		printf("Error in opening file\n");
		exit(1);
	}
//	while((ch=getc(sfp))!=EOF)
//	printf("%c",ch);
//	putchar(ch);
	if((dfp=fopen("dstfile","w"))==NULL)
	{
		printf("Error in opening file\n");
		exit(1);
	}
	while((ch=getc(sfp))!=EOF)
		putc(ch,dfp);
	fclose(sfp);
	fclose(dfp);
	return 0;
}
