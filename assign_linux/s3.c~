//#include <sys/types.h>
//#include <sys/stat.h>
#include <fcntl.h>
#include<stdio.h>
#include<string.h>
int main()
{
	int fd=-1,ret=-1;
	char buf[200];
	fd=open("file.txt",O_RDONLY);
	if(fd<0)
	{
		perror("open failed\n");
		return -1;
	}
	lseek(fd,10,SEEK_SET);//take another arrry buffer for read call to avoid lseek()
	ret=read(fd,buf,sizeof(buf));
	printf("%d\n",ret);
	if(ret<=0)
	{
		perror("read failed\n");
		return -1;
	}
	fd=open("file1.txt",O_WRONLY);
	if(fd<0)
	{
		perror("open failed\n");
		return -1;
	}
	ret=write(fd,buf,strlen(buf)+1);
	if(ret<=0)
	{
		perror("write failed\n");
		return -1;
	}
	//memset(buf,'\0',sizeof(buf));
	close(fd);
}
